#!/bin/bash

# Helper script to set up credentials for scripts/build-and-push.sh
# Copy this file to setup-credentials.sh and fill in your credentials
# DO NOT commit setup-credentials.sh to git

echo "Setting up GitHub Container Registry credentials..."
echo ""

# Set credentials
export GHCR_USERNAME="your-username-here"
export GHCR_PASSWORD="your-github-pat-here"

# Optional: Set to make package public
export MAKE_PUBLIC="false"

echo "Credentials set as environment variables for this session."
echo ""
echo "To use in current shell session, run:"
echo "  source setup-credentials.sh"
echo ""
echo "Or export manually:"
echo "  export GHCR_USERNAME=your-username"
echo "  export GHCR_PASSWORD=your-pat"
echo "  export MAKE_PUBLIC=true  # Optional: to make package public"

